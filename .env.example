# Example .env for local dev (Nest backend)
NODE_ENV=development
PORT=3000

# Postgres (local docker)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=leiloes
DB_USER=postgres
DB_PASS=postgres

# Swagger
SWAGGER_PATH=/docs
SWAGGER_EXPAND=none

# CORS
CORS_ORIGIN=http://localhost:3001

# JWT (adjust as needed)
JWT_SECRET=dev-secret
JWT_EXPIRES_IN=1d

# If you ever point to Supabase/Cloud Postgres:
# DB_SSL=true
